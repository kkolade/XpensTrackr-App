<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='page-container'>
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= link_to '<', root_path %>
    
      <%= f.submit "Sign up", class: 'btn' %>
   
      <% f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-element', placeholder: 'Full name' %>

      <% f.label :image %>
      <%= f.file_field :image %>

      <% f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-element', placeholder: 'Email' %>

      <% f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-element', placeholder: 'Password' %>
  </div>
<% end %>
