
<div class='category-container'>
  <div id="categories">
    <div class='login'>
      <div class= 'bars'>
        <span class= 'bar'></span>
        <span class= 'bar'></span>
        <span class= 'bar'></span>
      </div>
      <h2 class=''>Categories</h2>
      <div>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
      </div>
    </div> 
    <div class='sub-title'>
      <p>Total Expenses</p>
      <p>&dollar;&nbsp;<%= calculate_total_budget %></p>
    </div>
    <div class='list-container'>
      <% @categories.each do |category| %>
        <%= link_to category, class: 'card-link' do %>
          <div class='card-box'>
            <%= render category %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= link_to "New category", new_category_path, class: 'btn btn-submit' %>
</div>
